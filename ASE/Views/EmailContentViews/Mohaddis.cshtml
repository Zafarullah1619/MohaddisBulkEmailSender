@{
    Layout = null;
}

@model List<Dictionary<string, object>>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>

        /* Global styles */
        body {
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            font-family: 'Noto Naskh Arabic', 'Noto Nastaliq Urdu', Arial, sans-serif;
            color: #333;
            direction: ltr;
        }

        /* Container for the entire email */
        .email-container {
            width: 100%;
            background-color: #f0f0f0;
            padding: 10px;
            text-align: justify-all;
        }

        /* Section for header */
        .header-section {
            text-align: center;
            color: #000; /* Black color for the header */
            font-size: 40px; /* Increased font size for the header */
            margin: 20px 0; /* Added margin to vertically center align */
            font-weight: 300; /* Thin font style */
        }

        /* Arabic and Urdu content sections */
        .content-section {
            background-color: #ffffff;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            box-sizing: border-box; /* Include padding and borders in width calculation */
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 20px;
            overflow: hidden; /* Prevent inner sections from exceeding the parent */
            width: calc(100% - 40px); /* Adjusted width to accommodate padding and margin */
        }

        /* Field labels */
        .email-label {
            font-weight: bold;
            color: #4CAF50;
            margin-bottom: 15px;
            font-size: 24px;
        }

        /* Field values */
        .email-value {
            color: #555;
            font-size: 18px; /* Reduced font size for values */
            margin-top: 10px;
            margin-bottom: 20px;
        }

        /* Arabic and Urdu text alignment */
        .rtl {
            direction: rtl;
        }
    </style>
</head>
<body>
    <section class="email-container">
        <h1 class="header-section">آج کی حدیث</h1>

        @foreach (var contentRow in Model)
        {
            <!-- Arabic content section -->
            <div class="content-section rtl">
                <span class="email-label"> @contentRow["HadithBookName"] : </span>
                <span class="email-value">@contentRow["kitaabNameArabic"] (@contentRow["BaabNameArabic"])</span>

                <div>
                    <span class="email-label">حکم :</span>
                    <span class="email-value">أحاديث صحيح مسلم كلها صحيحة</span>
                </div>

                <div>
                    <span class="email-label"> حديث :</span>
                    <span class="email-value">@contentRow["HadithArabicText"]</span>
                </div>
            </div>

            <!-- Urdu content section -->
            <div class="content-section rtl">
                <span class="email-label"> @contentRow["HadithBookName"] : </span>
                <span class="email-value">@contentRow["kitaabNameUrdu"] (@contentRow["BaabNameUrdu"])</span>

                <div>
                    <span class="email-label">مترجم :</span>
                    <span class="email-value"> پروفیسر محمد یحییٰ سلطان محمود جلالپوری (دار السلام)</span>
                </div>

                <div>
                    <span class="email-label"> حديث :</span>
                    <span class="email-value">@contentRow["HadithUrduText"]</span>
                </div>
            </div>
        }
    </section>
</body>
</html>
